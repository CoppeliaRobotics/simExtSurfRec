<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<?xml-stylesheet type="text/xsl" href="callbacks.xsl"?>

<plugin name="SurfaceReconstruction" author="federico.ferri.it@gmail.com">
    <description>API functions for surface reconstruction from point clouds</description>
    <command name="reconstruct">
        <description></description>
        <params>
            <param name="pointCloudHandle" type="int">
                <description>handle of the point cloud</description>
            </param>
            <param name="algorithm" type="int" default="sim_surfacereconstruction_algorithm_scalespace">
                <description>reconstruction algorithm to use</description>
            </param>
        </params>
        <return>
            <param name="shapeHandle" type="int">
                <description>handle of the shape with the reconstructed mesh</description>
            </param>
            <param name="neighborhoodSquaredRadius" type="float">
                <description>neighborhood squared radius</description>
            </param>
        </return>
    </command>
    <enum name="Algorithm" item-prefix="sim_surfacereconstruction_algorithm_" base="6785">
        <item name="scalespace" />
        <item name="poisson" />
        <item name="advancingfront" />
    </enum>
</plugin>
